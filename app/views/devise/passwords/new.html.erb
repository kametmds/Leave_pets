<h2>パスワードの再設定を行います</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <h4 class="textlabel"><%= f.label :email %></h4>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "s-textinput", placeholder: " Eメールアドレス" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "#{t('users.passwords.new.send_me_reset_password_instructions')}", class: "btn-s btn-red" %>
  </div>
  <br>
<% end %>

<%= render "devise/shared/links" %>
