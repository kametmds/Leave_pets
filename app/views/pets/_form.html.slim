= form_with(model: @pet, local: true, class: '') do |f|
  - if @pet.errors.any?
    #error_explanation
      h2 = pluralize(@pet.errors.count)
      ul
        - @pet.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :age
    = f.text_field :age
  .field
    = f.label :size
    = f.text_field :size
  .field
    = f.label :weight
    = f.text_field :weight
  .field
    = f.label :content
    = f.text_area :content
  .field.icon
    = image_tag(@pet.image.url) if @pet.image && @pet.image.url
  = f.file_field :image
  = f.hidden_field :image_cache
  .actions = f.submit

